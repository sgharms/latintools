\newcommand{\trans}[1]{
	\begin{normalsize}
		\begin{sc}
			{{#1}}
		\end{sc}
	\end{normalsize}
}

\newcommand{\latblock}[2]{
	\begin{verse}
		\begin{metrica}
		{#1}\\
		\end{metrica}
		\trans{{#2}}\\
	\end{verse}
}

